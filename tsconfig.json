{
    "compilerOptions": {
        // Configurações básicas
        "lib": ["ESNext", "DOM"],
        "target": "ESNext",
        "module": "ESNext",
        "moduleDetection": "force",
        "jsx": "react-jsx",
        "allowJs": true,

        "types": ["zod", "typescript", "@types/bun", "@types/node", "@cloudflare/workers-types"],

        // ✅ Para gerar arquivos .d.ts
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "dist",

        // Bundler mode
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": false,
        "noEmit": false, // ✅ MUDADO: permite emissão de arquivos

        // Configurações relaxadas
        "strict": false,
        "skipLibCheck": true,
        "noFallthroughCasesInSwitch": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noPropertyAccessFromIndexSignature": false,
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "noImplicitThis": false,
        "strictNullChecks": false,
        "strictFunctionTypes": false,
        "strictBindCallApply": false,
        "strictPropertyInitialization": false
    },
    "include": ["backend-worker-financeiro/**/*", "backend-banco/**/*"],
    "exclude": ["node_modules", "dist"]
}
